<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cn.employment.login.dao.UsersMapper" >

  <resultMap id="BaseResultMap" type="com.cn.employment.login.entity.Users" >
    <result column="id" property="id" />
    <result column="email" property="email" />
    <result column="username" property="username" />
    <result column="pwd" property="pwd" />
    <result column="phonenum" property="phonenum" />
    <result column="state" property="state" />
    <result column="join_time" property="joinTime" />
    <result column="last_time" property="lastTime" />
  </resultMap>

  <select id="queryUserId" resultType="java.lang.Long">
    select id from users t where t.username = #{map.userName} and t.pwd = #{map.pwd}
  </select>

  <select id="queryRoleId" resultType="java.lang.Long">
    select roleId from users_role t where t.userId = #{userId}
  </select>
</mapper>